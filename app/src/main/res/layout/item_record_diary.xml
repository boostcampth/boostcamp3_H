<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="diary"
            type="teamh.boostcamp.myapplication.data.model.LegacyDiary" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_diary_date"
            style="@style/SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:date="@{diary.recordDate}"
            app:month="@{@stringArray/month}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_gutter"
            android:layout_marginBottom="@dimen/layout_gutter"
            android:layout_marginLeft="@dimen/layout_gutter"
            android:layout_marginRight="@dimen/layout_gutter"
            app:cardCornerRadius="@dimen/card_view_radius"
            app:cardElevation="@dimen/card_elevation"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_diary_date">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_item_diary_emotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_gutter"
                    android:layout_marginTop="@dimen/layout_gutter"
                    android:layout_marginBottom="@dimen/layout_gutter"
                    android:gravity="center"
                    android:minWidth="@dimen/diary_emoji_min"
                    android:minHeight="@dimen/diary_emoji_min"
                    app:emotion="@{diary.selectedEmotion}"
                    app:entries="@{@stringArray/graph_emojis}"
                    android:textSize="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_gutter"
                    android:layout_marginRight="@dimen/layout_gutter"
                    android:background="@drawable/bg_hash_tag_edittext"
                    android:gravity="center_vertical"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@id/tv_item_diary_emotion"
                    app:layout_constraintLeft_toRightOf="@id/tv_item_diary_emotion"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_item_diary_emotion">

                    <ImageView
                        android:id="@+id/iv_item_diary_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_gutter"
                        android:src="@drawable/ic_play_circle_filled_black_24dp" />

                    <androidx.core.widget.ContentLoadingProgressBar
                        android:id="@+id/pb_item_diary_percent"
                        android:layout_width="match_parent"
                        android:progress="35"
                        android:layout_height="@dimen/diary_progress_height"
                        android:layout_marginLeft="@dimen/layout_gutter"
                        android:layout_marginRight="@dimen/layout_gutter" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_diary_tags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_gutter"
                    android:layout_marginTop="@dimen/layout_gutter"
                    android:layout_marginRight="@dimen/layout_gutter"
                    android:layout_marginBottom="@dimen/layout_gutter"
                    android:textSize="12dp"
                    android:text="@{diary.tags}"
                    android:textColor="@color/all_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_item_diary_emotion"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_item_diary_emotion" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>